model BankDetails {
    id            String       @id @default(uuid())
    bankName      String
    bankCode      String
    accountName   String
    accountNumber String
    storeId       String       @unique
    store         Organization @relation(fields: [storeId], references: [id], onDelete: Cascade)
    createdAt     DateTime     @default(now())
    updatedAt     DateTime     @updatedAt

    @@map("bankdetails")
}

model Wallet {
    id        String       @id @default(uuid())
    balance   Decimal
    storeId   String       @unique
    store     Organization @relation(fields: [storeId], references: [id], onDelete: Cascade)
    createdAt DateTime     @default(now())
    updatedAt DateTime     @updatedAt

    @@map("wallet")
}
